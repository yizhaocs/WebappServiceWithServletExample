<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="log4jInitialization" class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
		<property name="targetClass" value="org.springframework.util.Log4jConfigurer" />
		<property name="targetMethod" value="initLogging" />
		<property name="arguments">
			<list>
				<!--<value>file:///opt/opinmind/conf/ekvsummarybackfill/ekvsummarybackfill.log4j.properties</value>-->
				<value>file:///Users/yzhao/IdeaProjects/WebappServiceWithServletExample/src/main/resources/webappServiceWithServlet.log4j.properties</value>
			</list>
		</property>
	</bean>

	<bean id="applicationProperties"
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations" ref="configFileList" />
	</bean>

	<!-- configFileList needed in CookieRouter also -->
	<bean id="configFileList" class="java.util.LinkedList">
		<constructor-arg>
			<list>
				<!--<value>file:///opt/opinmind/conf/ekvsummarybackfill/config.properties</value>-->
			</list>
		</constructor-arg>
	</bean>


</beans>
